<MedCardScreen>:
    name: 'med_card'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        MDTextField:
            text: 'Малюгин Алексей Владимирович'
            hint_text: 'Пациент'
            color_mode: 'custom'
            line_color_focus: 0, 0, 0, 0.7
            readonly: True
            size_hint_y: None

        MDLabel:
            text: 'Тут собрана информация по вашей истории болезни'
            size_hint_y: None
            height: self.texture_size[1]
            font_style: 'Subtitle1'


<TestingScreen>:
    name: 'testing'

    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(0), dp(0), dp(0), dp(10)

        MDLabel:
            text: 'Ответьте на несколько вопросов'
            size_hint_y: None
            halign: 'center'
            font_style: 'H6'



        MDProgressBar:
            id: progress_bar
            size_hint_y: None
            height: dp(10)
            value: root.q_current
            max: root.q_count
            min: 0

        ScrollView:

            GridLayout:
                id: grid
                cols: 1
                size_hint: (1, None)
                height: self.minimum_height
                spacing: dp(17)

        MDRectangleFlatButton:
            id: done_btn
            increment_width: dp(self.parent.width - 25)
            text: "Завершить"
            disabled: True
            pos_hint: {'center_x': 0.5}
            on_release: root.save()


<QuestionCard>:
    orientation: 'vertical'
    height: self.minimum_height
    size_hint_y: None
    padding: dp(15), dp(0), dp(15), dp(0)

    MDLabel:
        text: root.text
        size_hint_y: None
        height: dp(30)

    BoxLayout:
        id: answers_vars
        spacing: dp(5)
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<QuestionRow>:
    orientation: 'horizontal'
    size_hint_y: None
    height: dp(30)
    padding: dp(7), dp(0), dp(7), dp(0)

    canvas.before:
        Color:
            rgb: 0.98, 0.94, 0.94
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        size_hint_x: None
        width: self.height
        text: str(root.question_number)

    MDLabel:
        size_hint_x: 1
        text: root.text

    MDCheckbox:
        id: question_check
        size_hint_x: None
        width: self.height
        group: root.checkbox_group
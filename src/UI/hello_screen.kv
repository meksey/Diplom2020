<HelloScreen>:
    name: 'hello'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_y': 0.7, 'center_x': 0.5}
            size_hint: (0.8, None)
            height: self.minimum_height
            spacing: dp(10)
            padding: dp(10)


            canvas.before:
                Color:
                    rgb: 0.98, 0.94, 0.94
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDLabel:
                size_hint_y: None
                font_style: 'H6'
                text: 'Добро пожаловать'
                halign: 'center'

            MDRectangleFlatButton:
                text: 'Регистрация'
                pos_hint: {'center_x': 0.5}

                on_release:
                    root.manager.current = 'reg'

            MDRectangleFlatButton:
                text: 'Вход'
                pos_hint: {'center_x': 0.5}

                on_release:
                    root.manager.current = 'login'